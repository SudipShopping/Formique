# 🌐 API base URL (Backend endpoint)
NEXT_PUBLIC_API_URL=https://your-backend-service-name.onrender.com/api

# ☁️ Cloudinary for product image uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# 💳 Razorpay payment integration
NEXT_PUBLIC_RAZORPAY_KEY=your_razorpay_public_key

# 🗺 Google Maps API for address lookup
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# 🏷 Site info
NEXT_PUBLIC_SITE_NAME=Formique & Co.

# 💰 FMcoin / Gift System (for display purposes)
NEXT_PUBLIC_FMCOIN_ENABLED=true
NEXT_PUBLIC_GIFTCARD_ENABLED=true

# 🧾 Optional: analytics flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
